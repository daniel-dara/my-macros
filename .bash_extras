# Change prompt
export PS1="[\u@\h:\w] "

# General Shortcuts
alias c=clear
alias e=exit
alias ll="ls -l"
alias up="cd .."
alias rm="rm -i"
alias rmall="rm -Rf"
 
alias .="cd .."
alias ..="cd ../.."
alias ...="cd ../../.."
alias ....="cd ../../../.."
alias .....="cd ../../../../.."

alias refresh-bash-extras="wget https://raw.github.com/danielsd/bash_extras/master/.bash_extras -O ~/.bash_extras"

# Trash
alias del="trash-put"
alias tl="trash-list"

# Make
alias m="make"
alias mr="make run"
alias mc="make clean"

# Git
alias gp="git pull"
alias gs="git status"
alias ga="git add -A"
alias gc="git commit -m "
alias gsh="git push"
alias gd="git diff"

# Other
alias countall="find /web/home/ddara/public_html/projects -type f -exec wc -l {} \; | awk '{total += \$1} END{print total}'"
